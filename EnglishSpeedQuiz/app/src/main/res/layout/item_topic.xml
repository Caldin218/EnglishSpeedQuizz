<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginHorizontal="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/bgIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_tab_selected"
            android:backgroundTint="#E3F2FD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgTopicIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#2196F3"
            app:layout_constraintStart_toStartOf="@id/bgIcon"
            app:layout_constraintEnd_toEndOf="@id/bgIcon"
            app:layout_constraintTop_toTopOf="@id/bgIcon"
            app:layout_constraintBottom_toBottomOf="@id/bgIcon"/>

        <TextView
            android:id="@+id/tvTopicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia đình"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/bgIcon"
            app:layout_constraintTop_toTopOf="@id/bgIcon"/>

        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/50 từ đã học"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/bgIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTopicName"/>

        <ProgressBar
            android:id="@+id/prgTopicProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:progress="30"
            android:max="100"
            android:progressDrawable="@drawable/style_timer_bar_solid"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/bgIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPercent"/>

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/prgTopicProgress"
            app:layout_constraintTop_toTopOf="@id/prgTopicProgress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>